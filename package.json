{
  "name": "thrift-client",
  "version": "1.0.0",
  "description": "Thrift client based on Electron, React, etc.",
  "main": "bootstrapper.js",
  "author": "Alexander Prokopyev <avalarin@gmail.com>",
  "license": "ISC",
  "scripts": {
    "start": "electron ./app",
    "hot-server": "NODE_ENV=development node --max_old_space_size=2096 -r babel-register server.js",
    "start-hot": "HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill ./app/",
    "dev": "npm run hot-server -- --start-hot",
    "build-main": "NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.electron.js --progress --profile --colors",
    "build-renderer": "NODE_ENV=production node -r babel-register ./node_modules/webpack/bin/webpack --config webpack.config.production.js --progress --profile --colors",
    "build": "npm run build-main && npm run build-renderer",
    "package": "npm run build && build --publish never",
    "package-win": "npm run build && build --win --x64",
    "package-linux": "npm run build && build --linux",
    "package-all": "npm run build && build -mwl"
  },
  "dependencies": {
    "async": "^2.1.4",
    "classnames": "^2.2.5",
    "electron-settings": "^2.2.2",
    "font-awesome": "^4.7.0",
    "guid": "0.0.12",
    "immutable": "^3.8.1",
    "mkdirp": "^0.5.1",
    "primer-css": "^4.6.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-jss": "^5.2.0",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.7",
    "recursive-readdir": "^2.1.0",
    "redux": "^3.6.0",
    "redux-actions": "^1.2.0",
    "redux-logger": "^2.7.4",
    "redux-thunk": "^2.2.0",
    "source-map-support": "^0.4.10"
  },
  "devEngines": {
    "node": ">=6.x",
    "npm": ">=3.x"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-register": "^6.18.0",
    "babel-root-import": "^4.1.5",
    "babili-webpack-plugin": "0.0.7",
    "css-loader": "^0.26.1",
    "electron": "^1.4.15",
    "electron-builder": "^11.4.4",
    "eslint-formatter-pretty": "^1.1.0",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.26.0",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0",
    "webpack-merge": "^2.4.0",
    "webpack-validator": "^2.3.0"
  },
  "build": {
    "productName": "ThriftClient",
    "appId": "net.avalarin.ThriftClient",
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "files": [
      "dist/",
      "node_modules/",
      "app.html",
      "app.js",
      "app.js.map",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "bin": {
    "electron": "./node_modules/.bin/electron"
  }
}
