{
  "name": "thrift-client",
  "version": "1.0.0",
  "description": "Thrift client based on Electron, React, etc.",
  "main": "bootstrapper.js",
  "author": "Alexander Prokopyev <avalarin@gmail.com>",
  "license": "ISC",
  "scripts": {
    "start": "electron ./app",
    "hot-server": "NODE_ENV=development node --max_old_space_size=2096 -r babel-register server.js",
    "start-hot": "HOT=1 NODE_ENV=development electron -r babel-register -r babel-polyfill ./app/app.js",
    "dev": "npm run hot-server -- --start-hot"
  },
  "dependencies": {
    "font-awesome": "^4.7.0",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.7",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0",
    "source-map-support": "^0.4.10"
  },
  "devEngines": {
    "node": ">=6.x",
    "npm": ">=3.x"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-loader": "^6.2.10",
    "babel-polyfill": "^6.20.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-register": "^6.18.0",
    "electron": "^1.4.15",
    "eslint-formatter-pretty": "^1.1.0",
    "express": "^4.14.0",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0",
    "webpack-merge": "^2.4.0",
    "webpack-validator": "^2.3.0"
  }
}
